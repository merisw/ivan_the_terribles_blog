<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>


<div class="comment">
  <% @post.comments.each do |c| %>
    <p><%= c.body %></p>
    <div class="reply">
      <% c.replies.each do |r| %>
        <p><%= r.body %></p>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
